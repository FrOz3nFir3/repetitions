# ============================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================
VITE_API_URL=https://api.sample.com
VITE_GOOGLE_CLIENT_ID=your-google-client-id-here

# ============================================
# SERVER ENVIRONMENT VARIABLES
# ============================================

# Server Configuration
NODE_ENV=production (default: development )
PORT=3000 (default: 80)

# Database
MONGO_URI=mongo local or production uri here

# Authentication & Security
ACCESS_TOKEN_SECRET=your-random-long-secure-string-here
REFRESH_TOKEN_SECRET=your-random-long-secure-string-here
COOKIE_SECRET=your-random-long-secure-string-here

# Rate Limiting (comma-separated IPs to whitelist)
WHITELIST_IP=127.0.0.1,192.168.0.1

# Redis Cache
REDIS_URI=redis://localhost:6379
REDIS_CACHE_ENABLED=true

# Debug Logging (ONLY enable in development - has performance impact!)
REDIS_CACHE_DEBUG_ENABLED=false

# Proxy Configuration
ENABLE_PROXY=true
