{
  "version": 2,
  "builds": [
    {
      "src": "server/src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "../server/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server/src/server.js"
    }
  ],
  "functions": {
    "server/public/**": {
      "excludeFiles": "**"
    }
  },
  "buildCommand": "npm run install-deploy"
}
